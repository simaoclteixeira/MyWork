@model IEnumerable<MyWork.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Criar novo funcionário?</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FuncionariosID">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.FuncionariosID">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.FuncionariosID">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
